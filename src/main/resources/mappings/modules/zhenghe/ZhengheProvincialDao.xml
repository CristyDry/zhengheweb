<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullteem.modules.zhenghe.dao.ZhengheProvincialDao">
    
	<sql id="zhengheProvincialColumns">
		a.id AS "id",
		a.name AS "name",
		a.wm AS "wm"
	</sql>
	
	<sql id="zhengheProvincialJoins">
	</sql>
    
	<select id="get" resultType="ZhengheProvincial">
		SELECT 
			<include refid="zhengheProvincialColumns"/>
		FROM zhenghe_provincial a
		<include refid="zhengheProvincialJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="ZhengheProvincial">
		SELECT 
			<include refid="zhengheProvincialColumns"/>
		FROM zhenghe_provincial a
		<include refid="zhengheProvincialJoins"/>
		<where>
			
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="ZhengheProvincial">
		SELECT 
			<include refid="zhengheProvincialColumns"/>
		FROM zhenghe_provincial a
		<include refid="zhengheProvincialJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO zhenghe_provincial(
			id,
			name,
			wm
		) VALUES (
			#{id},
			#{name},
			#{wm}
		)
	</insert>
	
	<update id="update">
		UPDATE zhenghe_provincial SET 	
			name = #{name},
			wm = #{wm}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM zhenghe_provincial
		WHERE id = #{id}
	</update>
	
</mapper>