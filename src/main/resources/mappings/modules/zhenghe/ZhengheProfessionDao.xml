<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullteem.modules.zhenghe.dao.ZhengheProfessionDao">
    
	<sql id="zhengheProfessionColumns">
		a.id AS "id",
		a.profession AS "profession"
	</sql>
	
	<sql id="zhengheProfessionJoins">
	</sql>
    
	<select id="get" resultType="ZhengheProfession">
		SELECT 
			<include refid="zhengheProfessionColumns"/>
		FROM zhenghe_profession a
		<include refid="zhengheProfessionJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="ZhengheProfession">
		SELECT 
			<include refid="zhengheProfessionColumns"/>
		FROM zhenghe_profession a
		<include refid="zhengheProfessionJoins"/>
		<where>
			
			<if test="profession != null and profession != ''">
				AND a.profession LIKE 
					<if test="dbName == 'oracle'">'%'||#{profession}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{profession}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{profession},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="ZhengheProfession">
		SELECT 
			<include refid="zhengheProfessionColumns"/>
		FROM zhenghe_profession a
		<include refid="zhengheProfessionJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO zhenghe_profession(
			id,
			profession
		) VALUES (
			#{id},
			#{profession}
		)
	</insert>
	
	<update id="update">
		UPDATE zhenghe_profession SET 	
			profession = #{profession}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM zhenghe_profession
		WHERE id = #{id}
	</update>
	
</mapper>